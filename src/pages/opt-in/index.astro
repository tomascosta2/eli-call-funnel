---
import Footer from "../../components/Footer.astro";
import CalificationForm from "../../components/opt-in/calificationForm.tsx";
import FormWrapper from "../../components/opt-in/formWrapper";
import FormularioWrapper from "../../components/opt-in/formWrapper";
import SimpleForm from "../../components/opt-in/optInForm.tsx";
import OptInForm from "../../components/opt-in/optInForm.tsx";
import Layout from "../../layouts/Layout.astro";

const VIDEO_TESTIMONIALS = [
	{
		video: "",
		titulo: "[Nombre]",
		story: "Situación previa vs actual con storytelling",
		nombre: "Nombre y Apellido",
		dato: "Edad || Ubicación",
	},
];

const SCREENSHOT_TESTIMONIALS = [
	{
		captura: "",
	},
	{
		captura: "",
	},
	{
		captura: "",
	},
	{
		captura: "",
	},
